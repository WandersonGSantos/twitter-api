// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User{
  username String @id
  password String
  displayName String
  tweet Tweet[]
}

model Tweet{
  id Int @id @default(autoincrement())
  texto String
  emoji String?
  data_postagem DateTime @default(now())
  curtidas Int
  autor User @relation(fields: [autorId], references: [username])
  autorId  String
}